<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theatre_Seat_Recycler">
        <item name="android:layout_height">@dimen/match_constraint</item>
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">@dimen/seat_recycler_padding</item>
        <item name="layoutManager">android.support.v7.widget.GridLayoutManager</item>
        <item name="spanCount">4</item>
    </style>

    <style name="Theatre_Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theatre_Top_Button" parent="Theatre_Button">
        <item name="android:textSize">@dimen/top_button_text</item>
        <item name="paddingEnd">@dimen/top_button_padding_right</item>
        <item name="paddingStart">@dimen/top_button_padding_left</item>
        <item name="android:paddingLeft">@dimen/top_button_padding_left</item>
        <item name="android:paddingRight">@dimen/top_button_padding_right</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_drop_down_black_24dp</item>
        <item name="android:drawableRight">@drawable/ic_arrow_drop_down_black_24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Theatre_Bottom_Button" parent="Theatre_Button">
        <item name="android:textSize">@dimen/bottom_button_text</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theatre_Seat">
        <item name="android:layout_height">@dimen/seat_frame_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/seat_margin</item>
    </style>

    <style name="Theatre_Seat_Number">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/seat_number_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/seat_text</item>
    </style>
</resources>
